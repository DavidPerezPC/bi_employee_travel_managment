<odoo>
    <record id="view_czp_trip_purpose_form" model="ir.ui.view">
        <field name="name">czp.trip.purpose.form</field>
        <field name="model">czp.trip.purpose</field>
        <field name="arch" type="xml">
            <form string="Trip's Purposes">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_czp_trip_purpose_tree" model="ir.ui.view">
        <field name="name">czp.trip.purpose.tree</field>
        <field name="model">czp.trip.purpose</field>
        <field name="arch" type="xml">
            <list string="Trip's Purposes">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_czp_trip_purpose_kanban" model="ir.ui.view">
        <field name="name">czp.trip.purpose.kanban</field>
        <field name="model">czp.trip.purpose</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" string="Trip Purposes">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="code"/>
                            </strong>
                            <div>
                                <field name="name"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_czp_trip_purpose_search" model="ir.ui.view">
        <field name="name">czp.trip.purpose.search</field>
        <field name="model">czp.trip.purpose</field>
        <field name="arch" type="xml">
            <search string="Trip's Purposes">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_czp_trip_purpose" model="ir.actions.act_window">
        <field name="name">Trip Purposes</field>
        <field name="res_model">czp.trip.purpose</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_czp_trip_purpose_search"/>
    </record>

    <menuitem id="menu_czp_trip_purpose" 
        name="Trip's Purposes" sequence="80"
        parent="bi_employee_travel_managment.budget_rule_sub_menu_root"
        action="action_czp_trip_purpose"/>
</odoo>