<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_get_date_form_wizard" model="ir.ui.view">
        <field name="name">get.date.form.wizard.form</field>
        <field name="model">get.date.form.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Date">
                <group>
                    <field name="date" required="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_bank_transfer" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_get_date_form_wizard" model="ir.actions.act_window">
        <field name="name">Select Date</field>
        <field name="res_model">get.date.form.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>