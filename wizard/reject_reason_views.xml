<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="travel_request_reject_form" model="ir.ui.view">
            <field name="name">travel.request.reject</field>
            <field name="model">travel.request.reject</field>
            <field name="arch" type="xml">
                <form string="Reason for Travel Request Rejection">
                    <group>
                        <field name="reason" nolable="1" required="1"/>
                    </group>
                    <footer>
                        <button name="action_tarvel_req_rejected" string="Reject" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>